<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <%if(success_message){ %>
                    <div class="row">
                        <p class="alert alert-info">
                            <%=success_message%>
                        </p>
                    </div>
                    <% } %>
                        <h5 class="card-title fw-semibold mb-4">آگهی های من</h5>
                        <span>
                            <a href="/post/create" class="btn btn-info mb-4">انتشار آگهی جدید</a>
                        </span>
                        <div class="table-responsive">
                            <table class="table text-nowrap mb-0 align-middle">
                                <thead class="text-dark fs-4">
                                    <tr>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">شناسه</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">عنوان</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">توضیحات</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">تاریخ انتشار</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">مدیریت</h6>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%if(posts.length==0){ %>
                                        <p class="alert alert-warning text-center">هیچ آگهی از طرف شما ثبت نشده است.</p>

                                        <%}%>
                                            <%posts.forEach(post=> {%>
                                                <tr>
                                                    <td>
                                                        <%=post._id%>
                                                    </td>
                                                    <td>
                                                        <%=post.title%>
                                                    </td>
                                                    <td>
                                                        <%=post.content%>
                                                    </td>
                                                    <td>
                                                        <%=moment(post.createdAt).locale("fa").format(`jDD jMMMM
                                                            jYYYY`)%>
                                                    </td>
                                                    <td>
                                                        <form action="/post/delete/<%=post._id%>?_method=delete"
                                                            method="post" class="d-inline">
                                                            <button type="submit" class="btn btn-danger">حذف</button>
                                                        </form>
                                                        <a href="/post/<%=post._id%>" class="btn btn-success">مشاهده</a>
                                                    </td>
                                                </tr>

                                                <%})%>

                                </tbody>
                            </table>
                        </div>
            </div>
        </div>
    </div>
</div>